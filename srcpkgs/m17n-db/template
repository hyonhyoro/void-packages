# Template file for 'm17n-db'
pkgname=m17n-db
version=1.7.0
revision=1
noarch=yes
build_style=gnu-configure
makedepends="glibc-locales"
short_desc="Multilingual text processing library (database)"
maintainer="Kazuho Sakoda <hyonhyoro.kazuho@gmail.com>"
license="LGPL-2.1"
homepage="http://www.nongnu.org/m17n/"
distfiles="${NONGNU_SITE}/m17n/${pkgname}-${version}.tar.gz"
checksum=a2ba9f80161433d5c06e57915a9cd51f26c6df4a8909723f952cdbb9b48508f0

post_install() {
	vmkdir usr/lib
	mv ${DESTDIR}/usr/share/pkgconfig ${DESTDIR}/usr/lib
}

m17n-db-devel_package() {
	noarch=yes
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/bin
		vmove usr/lib/pkgconfig
	}
}
